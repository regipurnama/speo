<h2>QUESTIONS</h2>
<%= link_to 'New Question', new_question_path %></td>
<table>
	<tr>
		<td><strong>No</strong></td>
		<td><strong>Subject</strong></td>
		<td><strong>Title</strong></td>
		<td><strong>Key</strong></td>
		<td><strong>Action</strong></td>
	</tr>
	<% @questions.each.with_index do |question,index| %>
		<tr>
			<td><%= "#{index + 1}" %></td>
			<td><%= question.subject.name %></td>
			<td><%= question.title %></td>
			<td><%= question.key %></td>
			<td>
				<%= link_to 'Show', question_path(question.id) %>
				<%= link_to 'Edit', edit_question_path(question.id) %>
		  	<%= link_to 'Destroy', question_path(question.id), method: :delete, data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>	
	<% end %>
</table>
<%= paginate @questions %>



