<%= form_for @high_score, :html => { :class => "form-horizontal high_score" } do |f| %>

  <% if @high_score.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@high_score.errors.count, "error") %> prohibited this high_score from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @high_score.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :game, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :game, :class => 'form-control' %>
    </div>
    <%=f.error_span(:game) %>
  </div>
  <div class="form-group">
    <%= f.label :score, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:score) %>
  </div>
  <div class="form-group">
    <%= f.label :level, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :level, :class => 'form-control' %>
    </div>
    <%=f.error_span(:level) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                high_scores_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
